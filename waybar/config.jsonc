{
    // structure
    "layer": "top",
    "modules-left": [
        "sway/workspaces",
        "sway/mode",
        "sway/scratchpad",
        "sway/window"
    ],
    "modules-center": [
	"custom/notification",
        "clock"
    ],
    "modules-right": [
        "network",
        "pulseaudio",
        "backlight",
        "battery",
        "memory",
        "cpu",
        "sway/language",
        "tray"
    ],
    // General modules
    "network": {
        // "interface": "wlp2*", // (Optional) To force the use of this interface
        "format-wifi": " {essid} ({signalStrength}%)",
        "format-ethernet": " {ifname}",
        "tooltip-format": " {ifname} via {gwaddr}",
        "format-linked": " {ifname} (No IP)",
        "format-disconnected": "⚠ Disconnected {ifname}",
        "format-alt": " {ifname}:{ipaddr}/{cidr}"
    },
    "clock": {
        "format": "{:%a, %d.%b  %H:%M}",
        "tooltip-format": "<big>{:%Y %B}</big>\n<tt><small>{calendar}</small></tt>"
    },
    "tray": {
        "icon-size": 16,
        "spacing": 10
    },
    "custom/notification": {
	"tooltip": true,
    	"format": "{icon}",
    	"format-icons": {
      	"notification": " <span foreground='red'><sup></sup></span>",
      	"none": " ",
      	"dnd-notification": "󰂛 <span foreground='red'><sup></sup></span>",
      	"dnd-none": "󰂛 ",
      	"inhibited-notification": " <span foreground='red'><sup></sup></span>",
      	"inhibited-none": " ",
      	"dnd-inhibited-notification": "󰂛 <span foreground='red'><sup></sup></span>",
      	"dnd-inhibited-none": "󰂛 "
    },
    "return-type": "json",
    "exec-if": "which swaync-client",
    "exec": "swaync-client -swb",
    "on-click": "swaync-client -t -sw",
    "on-click-right": "swaync-client -d -sw",
    "escape": true
  },
    "pulseaudio": {
        "interval": 3,
        "scroll-step": 5, // %, can be a float
        "format": "{icon} {volume}% {format_source}",
        "format-bluetooth": " {icon} {volume}% {format_source}",
        "format-bluetooth-muted": "  {icon} {format_source}",
        "format-muted": " mute {format_source}",
        "format-source": " {volume}%",
        "format-source-muted": " ",
        "format-icons": {
                       "headphone": " ",
                       "hands-free": " ",
                       "headset": " ",
                       "phone": "",
                       "portable": "",
                       "car": "",
            "default": [
                " ",
                " ",
                " "
            ]
        },
        "on-click": "pavucontrol",
        "on-click-right": "foot -a pw-top pw-top",
        "on-click-middle": "pamixer -t"
    },
    // Power management
    "backlight": {
        "device": "intel_backlight",
        "format": "{percent}% {icon}",
        "format-icons": [
            "",
            "",
            "",
            "",
            "",
            "",
            "",
            "",
            ""
        ]
    },
    "battery": {
        "interval": 2,
        "states": {
            "good": 80,
            "warning": 30,
            "critical": 15
        },
        "format": "{icon} {capacity}%",
        "format-charging": " {capacity}%",
        "format-plugged": " {capacity}%",
        "format-alt": "{icon} {time}",
        "format-icons": [
            "",
            "",
            "",
            "",
            ""
        ]
    },
    "cpu": {
        "interval": 1,
        "format": "{icon0}{icon1}{icon2}{icon3}",
        "format-icons": [
            "<span color='#f8f8f2'>▁</span>", // milky
            "<span color='#2aa987'>▂</span>", // lightgreen
            "<span color='#2a7987'>▂</span>", // teal
            "<span color='#efb8f2'>▃</span>", // pink
            "<span color='#e8b8f2'>▄</span>", // pink
            "<span color='#ffffa5'>▅</span>", // lightyellow
            "<span color='#ffffa5'>▆</span>", // light
            "<span color='#ff9977'>▇</span>", // orange
            "<span color='#dd532e'>█</span>" // lightred
        ]
    },
    "memory": {
        "format": " {}%"
    },
    // sway related
    "sway/scratchpad": {
        "format": "{icon} {count}",
        "show-empty": false,
        "format-icons": [
            "",
            ""
        ],
        "tooltip": true,
        "tooltip-format": "{app}: {title}"
    },
    "sway/language": {
        "format": "{flag} {short}",
        "on-click": "swaymsg input type:keyboard xkb_switch_layout next"
    },
    "sway/mode": {
        "format": " <span style=\"italic\"> {}</span>",
        "max-length": 30
    },
    "sway/window": {
        "format": "{app_id} {title}",
        "max-length": 50,
        "rewrite": {
            "Min (.*)": "🌎 $1",
            "(.*)neovide(.*)": "$1$2",
            "(.*)nvim(.*)": "$1$2",
            "(.*)vim(.*)": "$1$2",
            "(.*) Visual Studio Code(.*)": "󰨞 $1",
            "org.telegram.desktop (.*)": "  [$1]",
            "oblivion-desktop (.*)": "  [$1]",
            "Alacritty (.*)": " $1",
            "nwg-look (.*)": "  $1",
            "org.gnome.seahorse.Application (.*)": "  $1"
	    //   for music
        }
    },
    "sway/workspaces": {
        "disable-scroll": true,
        "all-outputs": true,
        "warp-on-scroll": false,
        "format": "{icon}",
        "format-icons": {
            "1": " ",
            "2": " ",
            "3": " ",
            "4": " ",
            "5": " ",
            "urgent": " ",
            // "focused": " ",
            "default": " "
        }
    }
}
