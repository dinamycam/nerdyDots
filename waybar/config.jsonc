{
    // structure
    "layer": "top",
    "modules-left": [
	    "sway/workspaces", 
	    "sway/mode",
            "sway/scratchpad"
    ],
    "modules-center": ["sway/window"],
    "modules-right": [
	    "sway/language", 
	    "battery", 
	    "backlight", 
	    "clock", 
